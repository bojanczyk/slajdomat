{
  "name": "slajdomat",
  "productName": "Slajdomat",
  "version": "0.915",
  "description": "A slide making program, which plugs into Figma",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package;  bash src/main/post-electron.sh",
    "make": "electron-forge package; webpack; bash src/plugin/make-plugin-ui.sh; bash src/main/post-electron.sh",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts .",
    "webpack": "webpack",
    "plugin": "bash src/plugin/make-plugin-ui.sh",
    "watch": "npm-watch & webpack --watch",
    "viewtest": "cd test-slides; python3 -m http.server 8000"
  },
  "watch": {
    "plugin": {
      "patterns": [
        "src/plugin",
        "src/viewer",
        "src/common",
        "dist"
      ],
      "extensions": "js,css,html"
    }
  },
  "keywords": [],
  "author": {
    "name": "Mikolaj Bojanczyk",
    "email": "bojan@mimuw.edu.pl"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "src/icons/slajdomat.icns"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-dmg"
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/renderer/index.html",
                  "js": "./src/renderer/renderer.ts",
                  "name": "main_window"
                },
                {
                  "html": "./src/renderer/settings.html",
                  "js": "./src/renderer/settings.ts",
                  "name": "settings_window"
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@electron-forge/plugin-webpack": "6.0.0-beta.54",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "css-loader": "^5.1.1",
    "electron": "11.3.0",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "^2.20.0",
    "fork-ts-checker-webpack-plugin": "^5.0.14",
    "node-loader": "^1.0.1",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.17",
    "typescript": "^4.0.2",
    "webpack-cli": "^4.5.0"
  },
  "dependencies": {
    "@electron-forge/maker-dmg": "^6.0.0-beta.54",
    "@figma/plugin-typings": "^1.19.2",
    "@fontsource/roboto": "^4.2.2",
    "@types/cors": "^2.8.10",
    "@types/dom-mediacapture-record": "^1.0.7",
    "@types/express": "^4.17.11",
    "cors": "^2.8.5",
    "electron-squirrel-startup": "^1.0.0",
    "file-loader": "^6.2.0",
    "fuse": "^0.4.0",
    "fuse.js": "^6.4.6",
    "gsap": "^3.6.0",
    "html-webpack-plugin": "^5.2.0",
    "material-design-icons": "^3.0.1",
    "mime": "^1",
    "nodemon": "^2.0.7",
    "npm-watch": "^0.7.0",
    "path": "^0.12.7",
    "url-loader": "^4.1.1",
    "webpack": "^5.24.2"
  }
}
